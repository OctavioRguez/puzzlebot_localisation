<?xml version="1.0"?>
<robot name="Puzzlebot Jetson-Lidar Ed.">

    <!-- Dummy link to fiz robot chassis -->
    <link name="base_link">
    </link>

    <link name="chassis">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.01" />
            <inertia ixx="7.58333333333e-06" ixy="0.0" ixz="0.0" iyy="7.58333333333e-06" iyz="0.0" izz="1.25e-05"/>
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://puzzlebot_localisation/models/MCR2_1000_13_Chassis.stl"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="1.57079632679 0 1.57079632679" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://puzzlebot_localisation/models/MCR2_1000_13_Chassis.stl"/>
            </geometry>
            <material name="Plastic">
                <color rgba="0.62 0.62 0.588 0.702"/>
            </material>
        </visual>
    </link>

    <!-- Left wheel link -->
    <link name="wl_link">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://puzzlebot_localisation/models/MCR2_1000_1_1_Wheel_Coupler_2.stl"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="1.57079632679 0 0" xyz="0.05 0.095 0"/>
            <geometry>
                <mesh filename="package://puzzlebot_localisation/models/MCR2_1000_1_1_Wheel_Coupler_2.stl"/>
            </geometry>
            <material name="Rubber">
                <color rgba="0.188 0.188 0.176 1.0"/>
            </material>
        </visual>
    </link>

    <!-- Right wheel link -->
    <link name="wr_link">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://puzzlebot_localisation/models/MCR2_1000_1_1_Wheel_Coupler_2.stl"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="-1.57079632679 0 0" xyz="0.05 -0.095 0"/>
            <geometry>
                <mesh filename="package://puzzlebot_localisation/models/MCR2_1000_1_1_Wheel_Coupler_2.stl"/>
            </geometry>
            <material name="Rubber">
                <color rgba="0.188 0.188 0.176 1.0"/>
            </material>
        </visual>
    </link>

    <!-- Fixed joint connecting base_link to chassis -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0.0 0.0 0.05"/>
    </joint>

    <!-- Continuous joint for the right wheel -->
    <joint name="rightWheel" type="continuous">
        <parent link="chassis"/>
        <child link="wr_link"/>
        <origin xyz="0.0 0.0 0.0"/>
        <axis xyz="1 0 0" />
    </joint>

    <!-- Continuous joint for the left wheel -->
    <joint name="leftWheel" type="continuous">
        <parent link="chassis"/>
        <child link="wl_link"/>
        <origin xyz="0.0 0.0 0.0"/>
        <axis xyz="1 0 0" />
    </joint>
    
</robot>